<!DOCTYPE html>
<html>
  <head>
    <title>canvas</title>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
      <h1 class="title">Hello, canvas! </h1>
      <div id="container">
        <div id="sidepane">
            <div id="key" class="no--display"><%= key %></div>
            <form action="" class="gen--form" id="create--canvas--form">
              <div class="">
                <label for="create--canvas--form">Enter canvas name: </label>
                <input type="text" name="create--canvas--form" id='create--canvas--form--val' required>
                </div>
                <div class="">
                <input type="submit" value="create canvas">
              </div>
            </form>

            <div class="create--wss">
                <input type="button" value="create room" id="create--wss">
            </div>

            <div class="create--wss">
                <input type="button" value="clear canvas" id="clear--canvas">
            </div>
            <div class="create--wss">
                <input type="button" value="start media" id="start--media">
            </div>
            <div id="share--url"></div>
            <div class="mode--container">
                <span class="mode--buttons no--display" action="nodraw">no draw</span>
                <span class="mode--buttons no--display" action="draw">draw</span>
                <span class="undoredo--buttons" action="undo">undo</span>
                <span class="undoredo--buttons" action="redo">redo</span>
            </div>
        </div>
        <div id="root">
          <div class="canvas--container no--display">
            <canvas id="canvas"></canvas>
          </div>
        </div>
      </div>
      <div id="media">
        <div id="video-grid"></div>
        <button id="myBtn">Toggle Audio</button>
        <button id="myBtn-v">Toggle Video</button>
      </div>
      <script src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
      <script src="/scripts/utils.js"></script>
      <script src="/scripts/script.js"></script>
      <script src="/scripts/media_script.js"></script>
  </body>
</html>
